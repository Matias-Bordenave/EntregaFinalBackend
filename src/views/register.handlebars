<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{{title}}}</title>
</head>

<body>
    <div>
        <p>
            <a href="http://localhost:8080/login">login</a>
            |
            <a href="http://localhost:8080/register">register</a>
        </p>
    </div>
    <form action="/api/sessions/register" method="POST">
        <label for="first_name">First name: </label>
        <input type="text" name="first_name" required />
        <label for="last_name">Last name: </label>
        <input type="text" name="last_name" required />
        <label for="age">Age: </label>
        <input type="number" name="age" required />
        <label for="email">Email: </label>
        <input type="email" name="email" required />
        <label for="password">Password: </label>
        <input type="password" name="password" required />
        <button type="submit" name="submit">Register</button>
    </form>
    <div>
        <p><a href="http://localhost:8080/api/sessions/github">Login with GitHub</a></p>
    </div>
    {{#if error}}
    <p style="color: red">Invalid credentials / Email already in use</p>
    {{/if}}

</body>

</html>