<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{{title}}}</title>
</head>

<body>

    <div>

        <p><a href="http://localhost:8080/logout">Logout</a>
            |
            <a href="http://localhost:8080/">Home</a>
            |
            <a href="http://localhost:8080/profile">Profile</a>
            |
            <a href="http://localhost:8080/products">Products</a>
        </p>

    </div>

    <div>
        {{#each users.docs}}
        <p>Name: {{this.first_name}} {{this.last_name}}</p>
        <p>Age: {{this.age}}</p>
        <p>Email: {{this.email}}</p>
        <p>Role: {{this.role}}</p>
        <p><button onclick="deleteUser('{{this._id}}')"> Delete</button>
            ||
            <button onclick="upgradeDegradeUser('{{this._id}}')">
                Upgrade/degrade</button>
        </p>
        {{/each}}
    </div>

    <script src="/scripts/users.js"></script>

</body>

</html>